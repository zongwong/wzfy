
  <view class="container house">
    <image src="../../images/ad3.png" class="ad"/>
    <view class="ceils_wrap house_form">
      <view class="ceil_item border_bottom">
        <view class="ceil_ft need" style="width:3em;">姓名：</view>
        <view class="ceil_bd"><input type="text" placeholder="请填写真实姓名"/></view>
      </view>
      <view class="ceil_item border_bottom">
        <view class="ceil_ft need" style="width:3em;">手机：</view>
        <view class="ceil_bd"><input type="number" placeholder="请填写手机号码"/></view>
      </view>
      <view class="ceil_item border_bottom">
        <view class="ceil_ft need" style="width:3em;">性别：</view>
        <view class="checkbox" style="margin-left:2em;"><text class="text">男</text><text class="icon icon_checkbox"/></view>
        <view class="checkbox"><text class="text">女</text><text class="icon icon_checkbox checked"/></view>
      </view>
      <view class="ceil_item border_bottom">
        <view class="ceil_ft need" style="width:3em;">需求：</view>
        <view class="checkbox" style="margin-left:2em;"><text class="text">自住</text><text class="icon icon_checkbox"/></view>
        <view class="checkbox"><text class="text">出租</text><text class="icon icon_checkbox checked"/></view>
      </view>
    </view>
    <view class="ceils_wrap house_form">
      <view class="ceil_item border_bottom">
        <view class="ceil_ft need" style="white-space:nowrap;">房屋实际情况/具体装修要求</view>
      </view>
      <view class="ceil_item">
        <view class="ceil_bd">
          <textarea name="" class="other" placeholder="如：楼盘地址、楼层、面积、格局(房/卫)等。"/>
        </view>
      </view>
    </view>
    <button class="btn bottom full">我要推荐</button>
  </view>