
  <view class="container house">
    <image src="../../images/ad.png" class="ad"/>
    <view class="ceils_wrap house_from">
      <view class="ceil_item border_bottom">
        <view class="ceil_ft" style="width:3em;">姓名：</view>
        <view class="ceil_bd"><input type="text" placeholder="请填写真实姓名"/></view>
      </view>
      <view class="ceil_item border_bottom">
        <view class="ceil_ft" style="width:3em;">手机：</view>
        <view class="ceil_bd"><input type="number" placeholder="请填写手机号码"/></view>
      </view>
      <view class="ceil_item border_bottom">
        <view class="ceil_ft" style="width:3em;">性别：</view>
        <view class="checkbox" style="margin-left:2em;"><text class="text">男</text><text class="icon icon_checkbox"/></view>
        <view class="checkbox"><text class="text">女</text><text class="icon icon_checkbox checked"/></view>
      </view>
    </view>
    <view class="ceils_wrap house_from">
      <view class="ceil_item border_bottom more_cb">
        <view class="ceil_ft">需求：</view>
        <view class="checkbox"><text class="text">买房</text><text class="icon icon_checkbox"/></view>
        <view class="checkbox"><text class="text">卖方</text><text class="icon icon_checkbox checked"/></view>
        <view class="checkbox"><text class="text">租房</text><text class="icon icon_checkbox checked"/></view>
      </view>
      <view class="ceil_item border_bottom more_cb">
        <view class="ceil_ft">装修程度：</view>
        <view class="checkbox"><text class="text">毛坯</text><text class="icon icon_checkbox"/></view>
        <view class="checkbox"><text class="text">普装</text><text class="icon icon_checkbox checked"/></view>
        <view class="checkbox"><text class="text">精装</text><text class="icon icon_checkbox checked"/></view>
        <view class="checkbox"><text class="text">豪装</text><text class="icon icon_checkbox checked"/></view>
      </view>
    </view>
    <view class="ceils_wrap house_from">
      <view class="ceil_item border_bottom">
        <view class="ceil_ft">其他需求</view>
      </view>
      <view class="ceil_item border_bottom">
        <view class="ceil_bd">
          <textarea name="" class="other" placeholder="如：不要老小区，不要靠近街道。"/>
        </view>
      </view>
    </view>
    <button class="btn bottom full">我要推荐</button>
  </view>