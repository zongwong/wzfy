
  <view class="container city">
      <view class="title">当前定位城市：</view>
      <view class="ceils_wrap">
          <view class="ceil_item">
              <view class="ceil_bd"><text class="selected" bindtap="chooseCity" data-wpychoosecity-a="{{gpsCity}}">{{gpsCity}}</text></view>
          </view>
      </view>
      <view class="title">选择城市：</view>
      <view class="ceils_wrap">
          <view class="ceil_item border_bottom"  wx:for="{{city}}" wx:key="city_{{index}}">
              <view class="ceil_bd" bindtap="chooseCity" data-wpychoosecity-a="{{item}}">{{item}}</view>
          </view>
      </view>
  </view>