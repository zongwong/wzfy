<style lang="scss">
  .selectBlock{
    position: absolute;
    background:rgba(0,0,0,.6);
    width: 100%;
    height: 100%;
    top: 72rpx;
    left: 0;
    z-index: 2;
    .select{
      padding: 0 36rpx;
      background:#fff;
      .select_item{
        display: flex;
        align-items: center;
        height: 70rpx;
        font-size: 26rpx;
        .text{
          flex: 1;
          &.selected{
            color: #fd6447;
          }
        }
        .icon_selected{
          width: 31rpx;
          height: 22rpx;
          background-image: url(data:image/png;base64,);
        }
      }
    }
    .btn_box{
      background:#f4f4f4;
      padding: 16rpx 36rpx;
      .selected_btn{
        background: #fd6447;
        font-size: 32rpx;
        color: #fff;
      }
    }

  }
</style>
<template>
  <view class="selectBlock" wx:if="{{status}}" catchtap="close">
    <view class="select">
      <view class="select_item" wx:for="{{list}}" wx:key="select_item" catchtap="selectedChange({{index}})">
        <view class="text {{item.selected?'selected':''}}">{{item.text}}</view>
        <view class="icon {{item.selected?'icon_selected':''}}"></view>
      </view>
    </view>
    <view class="btn_box">
      <button class="selected_btn" catchtap="selectedSure">确定</button>
    </view>
  </view>
</template>
<script>
  import wepy from 'wepy'
  export default class Select extends wepy.component{
      props = {
          status:{
              type:Boolean,
              default:false,
              twoWay:true
          },
          list:{
              type:Object
          }
      }
      methods = {
          selectedSure() {
              this.status = false
              this.$emit('selected');
          },
          selectedChange(index) {
              this.list[index].selected = !this.list[index].selected
          },
          close() {
            this.status = false
          }
      }
  }
</script>