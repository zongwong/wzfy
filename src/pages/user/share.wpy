<style lang="scss">
page{
  background: #fff;
}
.share{
  .sharebg{
    display: block;
    width: 100%;
    height: 650rpx;
    margin-bottom: 34rpx;
  }
  .share_from{
    .ceil_item{
      margin: 0 36rpx;
      padding: 10px 0;
    }
    .ceil_ft{
      width: 5em;
      color: #000;
      text-align: left;
    }
    .sms{
      width: 162rpx;
      border: 2rpx solid #fc6447;
      border-radius: 6rpx;
      font-size: 24rpx;
      white-space: nowrap;
      padding: 0;
      text-align: center;
      line-height: 1.5;
      color: #fc6447;
      background: #fff;
      &:after{
        content:none;
      }
    }
  }
}
</style>
<template>
  <view class="share">
    <image src="../../images/sharebg.png" class="sharebg"></image>
    <view class="ceils_wrap share_from" style="padding-bottom:100rpx;">
      <view class="ceil_item border_bottom">
        <view class="ceil_ft">手机号码：</view>
        <view class="ceil_bd"><input type="number" placeholder="请填写手机号码" @input="phoneInput" value="{{phone}}"/></view>
      </view>
      <view class="ceil_item border_bottom">
        <view class="ceil_ft">验证码：</view>
        <view class="ceil_bd"><input type="number" placeholder="请填写验证码"  @input="codeInput" value="{{code}}"/></view>
        <button class="sms" @tap="getCode" disabled="{{disabled}}">{{text}}</button>
      </view>
      <view class="ceil_item border_bottom">
        <view class="ceil_ft">真实姓名：</view>
        <view class="ceil_bd"><input type="text" placeholder="请填写真实姓名"  @input="nameInput" value="{{name}}"/></view>
      </view>
      <view class="ceil_item border_bottom">
        <view class="ceil_ft">性别：</view>
        <view @tap="sexSelect('men')" class="checkbox"><text class="text">男</text><text class="icon icon_checkbox {{sex=='men'?'checked':''}}"></text></view>
        <view @tap="sexSelect('women')" class="checkbox"><text class="text">女</text><text class="icon icon_checkbox {{sex=='women'?'checked':''}}"></text></view>
      </view>
    </view>
    <button @tap="bind" disabled="{{ajax}}" class="btn bottom">注册</button>
  </view>
</template>

<script>
  import wepy from 'wepy'
  import api from '../../interfaces/api'
  export default class Share extends wepy.page {
    config = {
      navigationBarTitleText: '加入我们'
    }

    data = {
      phone:'',
      text:'获取验证码',
      disabled: false,
      code: '',
      sex:'men',
      member_id:'',
      ajax:false
    }

    methods = {
      sexSelect(sex) {
        this.sex = sex
      },
      phoneInput(e) {
        this.phone = e.detail.value
      },
      codeInput(e) {
        this.code = e.detail.value
      },
      nameInput(e) {
        this.name = e.detail.value
      },
      // 验证码
      async getCode() {
        if(!(/^1[345789]\d{9}$/.test(this.phone.replace(/-/g,'')))){
          wepy.showModal({
            content: '请输入正确的手机号',
            title: '提示'
          })
          return false;
        }
        this.disabled = true
        this.$apply()
        const data = await api.sms({
          phone: this.phone.replace(/-/g,'')
        })
        if(data.status){
          wepy.showToast({
            title: '验证码已发送'
          })
          
          this.text = '60s后获取'
          let second = 60
          let timer = setInterval(()=>{
            second = second - 1
            this.text = `${second}s后获取`
            if(second==0){
              this.text = '获取验证码'
              this.disabled = false
              clearInterval(timer)
            }
            this.$apply()
          },1000)
        }else{
          wepy.showModal({
            content: data.message,
            title: '提示'
          })
          this.disabled = false
          this.$apply()
        }
      },
      // 绑定
      async bind() {
        if(!(/^1[3456789]\d{9}$/.test(this.phone.replace(/-/g,'')))){
          wepy.showModal({
            content: '请输入正确的手机号',
            title: '提示'
          })
          return false;
        }
        if(!this.code){
          wepy.showModal({
            content: '请填写短信验证码',
            title: '提示'
          })
          return false;
        }
        if(!this.name){
          wepy.showModal({
            content: '请填写真实姓名',
            title: '提示'
          })
          return false;
        }
        console.log(this.member_id)
        if(this.ajax){
          return false
        }
        this.ajax = true
        this.$apply()
        const data = await api.register(this.member_id,{
          phone: this.phone.replace(/-/g,''),
          code: this.code,
          real_name:this.name,
          sex:this.sex
        }) 
        console.log(data)

        
        if(typeof data.status !='undefined' && !data.status){
          
          this.ajax = false
          this.$apply()
          wepy.showModal({
            title: '提示',
            content: data.message
          })
          return false;
        }
        wepy.setStorageSync('token',data.token)
        wepy.setStorageSync('user',data.member)
        wepy.showToast({
          title:'注册成功'
        })
        setTimeout(() => {
          wx.redirectTo({
              url: '/pages/user/agree',
          })
        }, 600);

      }
    }
    onShareAppMessage(){}
    onLoad(options) {
      this.member_id = options.id
      console.log(this.member_id)
    }
  }
</script>
