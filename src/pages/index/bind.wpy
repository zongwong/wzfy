.code_wrap{
  margin: 30rpx 36rpx!important;
  overflow: hidden;
  background: transparent;
  .ceil_item{
    padding: 0;
    .ceil_bd{
      background: #fff;
      // height: 72rpx;
      // box-sizing: border-box;
      border: 2rpx solid #e4e4e4;
      border-radius: 18rpx;
      margin-right: 30rpx;
      // padding: 0 15px;
      input{
        line-height: 32rpx;
        height: 100%;
      }
    }
    .code{
      background: #fff;
      border-radius: 18rpx;
      border:2rpx solid #fd6447;
      color: #fd6447;
      font-size: 30rpx;
      padding:6px 15px;
      line-height:48rpx;
      width: 230rpx;
    }
  }
}
